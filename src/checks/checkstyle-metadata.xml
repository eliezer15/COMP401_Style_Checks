<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE checkstyle-metadata PUBLIC
"-//eclipse-cs//DTD Check Metadata 1.1//EN"
"http://eclipse-cs.sourceforge.net/dtds/checkstyle-metadata_1_1.dtd">
<checkstyle-metadata>
    <rule-group-metadata name="My custom checks" priority="1600">

        <rule-metadata name="%MethodUsage.name" internal-name="MethodUsage" parent="TreeWalker">
            <alternative-name internal-name="checks.MethodUsageCheck" />
            <description>%MethodUsage.desc</description>
            <property-metadata name="methodName" datatype="String" default-value="split">
            	<description> Restricted method.</description>
            </property-metadata>
        </rule-metadata>
        
        <rule-metadata name="%MethodMin.name" internal-name="MethodMin" parent="TreeWalker">
            <alternative-name internal-name="checks.MethodMinCheck" />
            <description>%MethodMin.desc</description>
            <property-metadata name="min" datatype="Integer" default-value="2">
                <description>The minimum number of allowed methods.</description>
            </property-metadata>
        </rule-metadata>
        
    </rule-group-metadata>
</checkstyle-metadata>
